{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "out",
    "jsx": "react",
    "jsxFactory": "Mini.element",
    "jsxFragmentFactory": "Mini.fragment",
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": false,
    "allowJs": true, // Enable JavaScript files to be compiled
    "checkJs": true // Optional: enable type checking on JavaScript files
  },
  
  "include": [
    "src/**/*",
    "src/**/*.jsx", // Include .jsx files in the compilation
  ],
  "exclude": ["node_modules", "out", "utils/server.js"]
}
