{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "out",
    "jsx": "react",
    "jsxFactory": "Mini.element",
    "jsxFragmentFactory": "Mini.fragment",
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
}
