{
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "clear": "rm -rf out/*",
    "ts": "tsc -w",
    "newp": "python3 new.py page",
    "dev": "node server.js"
  },
  "comments": {
    "start": "live-server --port=17000 --cors",
    "ts": "npm run clear && npm run _copy && tsc -w",
    "_copy": "rsync -av --exclude='*.ts' --exclude='*.tsx' --exclude='*.jsx' src/ out/",
    "copy": "while true; do find src -type f -newermt '-1 seconds' ! -name '*.ts' ! -name '*.tsx' -exec rsync -av --exclude='*.ts' --exclude='*.tsx' src/ out/ \\;; sleep 1; done",
    "newc": "python3 new.py component",
    "dev": "npm run ts & npm run _copy"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "express": "^4.21.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4",
    "ws": "^8.18.0"
  }
}
